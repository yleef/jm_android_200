<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <Button
        android:id="@+id/bt_get_conversation_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 获取会话详细信息"
        />

    <Button
        android:id="@+id/bt_get_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 排序获取会话中消息"
        />


    <Button
        android:id="@+id/bt_enter_conversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 进入会话不再展示通知"
        />

    <Button
        android:id="@+id/bt_delete_conversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询或删除(会话/消息)"
        />
</LinearLayout>
